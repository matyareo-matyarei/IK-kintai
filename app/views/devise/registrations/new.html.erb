<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      社員情報入力
    </h1>
      <%= link_to 'ログインへ', new_user_session_path, class: "login" %><br>
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">フルネーム</label>
      <span class="indispensable">必須</span><p class='info-text'>※勤怠管理スプレッドシートと同一の名前である必要があります。</p>

    </div>
    <%= f.text_field :full_name, class:"input-default", id:"full_name", placeholder:"例) 榊康充", autofocus: true, maxlength:"10" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※半角の英字か数字で設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">勤務形態(常勤／非常勤)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.radio_button :full_part, :true, {style: "display: inline-block;"} %>
      <%= f.label :full_part_true, "常勤" %>
      <%= f.radio_button :full_part, :false, {style: "display: inline-block;"} %>
      <%= f.label :full_part_false, "非常勤" %>      
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">所属院</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.collection_select(:affiliation_id, Affiliation.all, :id, :name, {}, {class:"input-default",id:"user_affiliation_id"}) %>
    </div>
  </div>
  <div class="form-group">
    <p class='info-text'>※情報は正しく入力してください。勤怠入力に支障が出る場合があります。</p>
  </div>
  <div class='register-btn'>
    <%= f.submit "社員登録" ,class:"register-blue-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer"%>
