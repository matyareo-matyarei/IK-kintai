<%= render "shared/header" %>

<div class="items-form-contents">
  <header class="items-form-header">
    <h2 class="items-form-title"><%= "#{current_user.full_name}さんの勤怠情報を入力" %></h2>
  </header>
  <div class="items-form-main">
    <%= form_with model: @attendance, local: true do |f| %>
      <%= render partial: "form", locals: { f: f } %>
    </div>

    <div class='purchase-btn'>
      <span class='purchase-btn-text'>現時刻入力</span>
      <button type="button"></button>
      <%= image_tag '時計.png' , size: '60x60', class: "purchase-btn-icon"  %>
    </div>

    <div class="form-btn-contents">
      <%= f.submit "入力する" ,class:"form-btn" %>
    </div>
    <div class="items-form-title">
      <h4>補足情報入力</h4>
      <%= link_to image_tag('dentaku.png' , size: '60x60', class: "getumatu-btn-icon"), assist_attendances_path %>
      <div class='info-text'>※休憩時間、手当て、施術時間を<br>
      自動入力します。(日報参照)
      </div>
    </div>

  </div>
  <% end %>
  <%= render "shared/footer"%>
</div>